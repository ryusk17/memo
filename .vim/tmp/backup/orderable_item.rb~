  def self.find_by_sdcvan_gtin_delivery_d_record(d_recode)
    case d_recode.item_code_type
    when 0 # 統一商品コード
      find_by(gs1_code: d_recode.item_code)
    when 1 # JANコード
      find_by(jan_code: d_recode.item_code)
    when 9 # その他コード
      nil
    end
  end
end
